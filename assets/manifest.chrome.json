{
  "manifest_version": 3,
  "name": "Nydia: Passkey Holder",
  "version": "1.0.0",
  "version_name": "1.0.0-beta.2",
  "description": "Passkey storage on the Sia network. Hold your passkeys locally with decentralized backup.",
  "author": "Oleh N.",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["dispatcher.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injector.js", "icon.png", "popup.html", "popup.js", "popup.css"],
      "matches": ["https://*/*", "http://*/*"]
    }
  ],
  "action": {
    "default_popup": "menu.html",
    "default_title": "Nydia: Passkey Holder"
  },
  "icons": {
    "128": "icon.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
