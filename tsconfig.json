{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es6", "dom"],
    "moduleResolution": "bundler",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
