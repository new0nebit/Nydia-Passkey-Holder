{
  "name": "Nydia: Passkey Holder",
  "version": "1.0.0-alpha.3",
  "description": "Browser extension for decentralized passkey storage on the Sia network.",
  "author": "Oleh N.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/new0nebit/Nydia-Passkey-Holder.git"
  },
  "keywords": [
    "passkey",
    "webauthn",
    "browser-extension",
    "sia-network",
    "decentralized-storage",
    "authenticator",
    "security"
  ],
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "webpack --mode production --env target=chrome",
    "build:firefox": "webpack --mode production --env target=firefox",
    "dev": "webpack --watch --mode development --env target=chrome",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "analyze": "webpack --mode production --env analyze"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/chrome": "^0.0.326",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.2",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "mini-css-extract-plugin": "^2.9.2",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.14",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0",
    "webpack": "^5.99.9",
    "webpack-bundle-analyzer": "^4.10.2",
    "webpack-cli": "^6.0.1"
  }
}
