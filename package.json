{
  "name": "Nydia-Passkey-Holder",
  "version": "1.0.0-beta.2",
  "description": "Browser extension for decentralized passkey storage on the Sia network.",
  "author": "Oleh N.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/new0nebit/Nydia-Passkey-Holder.git"
  },
  "keywords": [
    "passkey",
    "webauthn",
    "browser-extension",
    "sia-network",
    "decentralized-storage",
    "authenticator",
    "security"
  ],
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "debug": "npm run build:chrome:debug && npm run build:firefox:debug",
    "build:chrome": "webpack --mode production --env target=chrome",
    "build:chrome:debug": "webpack --mode production --env target=chrome --env keepDebug=true",
    "build:firefox": "webpack --mode production --env target=firefox",
    "build:firefox:debug": "webpack --mode production --env target=firefox --env keepDebug=true",
    "dev": "npm-run-all --parallel --continue-on-error dev:chrome dev:firefox",
    "dev:chrome": "webpack --watch --mode development --env target=chrome",
    "dev:firefox": "webpack --watch --mode development --env target=firefox",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "type-check": "tsc --noEmit",
    "check": "npm-run-all --continue-on-error lint type-check",
    "analyze": "webpack --mode production --env analyze"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chrome": "^0.1.33",
    "@types/firefox-webext-browser": "^143.0.0",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.4",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "mini-css-extract-plugin": "^2.10.0",
    "npm-run-all": "^4.1.5",
    "terser-webpack-plugin": "^5.3.16",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0",
    "webpack": "^5.104.1",
    "webpack-bundle-analyzer": "^5.1.1",
    "webpack-cli": "^6.0.1"
  }
}
